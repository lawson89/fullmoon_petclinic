 {% function block.content() %}
 <h2>Owner Information</h2>
  
  
    <table class="table table-striped">
      <tr>
        <th>Name</th>
        <td><b>{%= owner.first_name%} {%= owner.last_name%}</b></td>
      </tr>
      <tr>
        <th>Address</th>
        <td>{%= owner.address%}</td>
      </tr>
      <tr>
        <th>City</th>
        <td>{%= owner.city%}</td>
      </tr>
      <tr>
        <th>Telephone</th>
        <td>{%= owner.telephone%}</td>
      </tr>
    </table>
  
    <a href="{%=owner.id%}/edit" class="btn btn-primary">Edit
      Owner</a>
    <a href="{%= owner.id%}/pets/new" class="btn btn-primary">Add
      New Pet</a>
  
    <br />
    <br />
    <br />
    <h2>Pets and Visits</h2>
  
<table class="table table-striped">
  
      <tbody>
        {% for _, pet in ipairs(pets) do %}
          <tr>
            <td valign="top">
              <dl class="dl-horizontal">
                <dt>Name</dt>
                <dd>{%= pet.name %}</dd>
                <dt>Birth Date</dt>
                <dd>{%= pet.birth_date %}</dd>
                <dt>Type</dt>
                <dd>{%= pet.type %}</dd>
              </dl>
            </td>
            <td valign="top">
              <table class="table-condensed">
                <thead>
                  <tr>
                    <th>Visit Date</th>
                    <th>Description</th>
                  </tr>
                </thead>
                
                <tbody><tr>
                  <td><a href="2/pets/2/edit">Edit Pet</a></td>
                  <td><a href="2/pets/2/visits/new">Add Visit</a></td>
                </tr>
              </tbody></table>
            </td>
          </tr>
      {% end %}
  
    </tbody></table>
    
{% end %}
{% render('layout',  {active_menu='owners'}) %}
  